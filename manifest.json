{
  "manifest_version": 3,
  "name": "蓝湖主题色识别器",
  "version": "1.0",
  "description": "Intelligent Theme Color Recognition Tool",
  "action": {  
    "default_title": "popup",  
    "default_icon": {  
      "16": "images/icon-16.png"  
    },
    "default_popup": "popup.html"  
  },
  "permissions": [
    "storage"
  ],

  "icons": {
    "16": "images/icon-16.png",
    "32": "images/icon-32.png",
    "48": "images/icon-48.png",
    "128": "images/icon-128.png"
  },
  "content_scripts": [
    {
      "js": ["scripts/content.js"],
      "matches": [
        "https://lanhuapp.com/web/*"
      ]
    }
  ]
}